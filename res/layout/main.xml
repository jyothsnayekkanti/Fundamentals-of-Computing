<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView 
    android:id="@+id/appHeader" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Fundamentals Of Computing"
    />
<Button android:text = "Converter" android:id="@+id/converter"
        android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_below="@+id/appHeader"    />
<Button android:text = "Sort" android:id="@+id/sorter"
        android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_below="@+id/converter"
    />
<Button android:text = "Gates" android:id="@+id/gates"
        android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_below="@+id/sorter"
    />
</RelativeLayout>

